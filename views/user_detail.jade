//- shows detailed information about the user
extends layout

block content
	h1 User Detail
	if (!(theuser == undefined))
		div.container
			table.table.table-striped
				tbody
					tr
						th Email
						th #{theuser.email}
					tr
						th Name
						th #{theuser.profile.name}
					tr
						th Gender
						th #{theuser.profile.gender}
					tr
						th Location
						th #{theuser.profile.location}
					tr
						th Website
						th #{theuser.profile.website}
					tr
						th Skills
						th 
							each val in theuser.skills
								p #{val}
					tr
						th Education
						th 
							each val in theuser.education
								p #{val.school}, #{val.program}, #{val.degree}, #{val.year}
					tr
						th Experience
						th 
							each val in theuser.experience
								p #{val.job_title}, #{val.description}, #{val.rating}, #{val.comment}, 
	else
		h2 User Not Found